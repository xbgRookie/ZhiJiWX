html,
body {
  background: #f8f9fb;
}
.list-wrap {
  margin-top: 20rpx;
  width: 100%;
  overflow-x: hidden;
}
.list-wrap .item {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: justify;
      -ms-flex-pack: justify;
          justify-content: space-between;
  padding: 0 0 0 30rpx;
  height: 96rpx;
  background: #fff;
}
.list-wrap .item:first-child {
  height: 144rpx;
}
.list-wrap .item:before {
  left: 92rpx;
}
.list-wrap .item .title,
.list-wrap .item .text {
  color: #011c31;
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 1px;
}
.list-wrap .item .text {
  margin-right: 30rpx;
  text-align: right;
}
.list-wrap .hourBox{
  display: flex;
  align-items: center;
}
.list-wrap .item .text .hour {
  text-align: right;
  margin-right: 2px;
  flex:1;
}
.list-wrap .item .gray {
  color: #999d9f;
}
.list-wrap .item .pic {
  margin-right: 30rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(216, 216, 216, 0.2);
  border-radius: 50%;
}
.list-wrap .desc-wrap {
  margin-top: 20rpx;
}
.list-wrap .desc-box {
  height: 228rpx;
  position: relative;
}
.list-wrap .desc-box .desc-text {
  width: 100%;
  height: 100%;
  padding: 20rpx 30rpx;
  font-weight: 400;
  font-size: 30rpx;
  color: #011c31;
  resize: none;
  background: #fff;
}
.list-wrap .desc-box .limit-wrap {
  position: absolute;
  right: 30rpx;
  bottom: 16rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
}
.list-wrap .desc-box .limit-wrap .count {
  display: -webkit-inline-box;
  display: -ms-inline-flexbox;
  display: inline-flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 0 14rpx;
  height: 32rpx;
  font-size: 22rpx;
  border-radius: 20rpx;
  background: #007aff;
  color: #fff;
}
.list-wrap .desc-box .limit-wrap .close {
  margin-left: 16rpx;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #c1d9e5;
  font-size: 20rpx;
  color: #fff;
  margin-bottom: 4rpx;
}
.list-wrap .save {
  margin-top: 80rpx;
  margin-bottom: 54rpx;
}
